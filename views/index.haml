%html{:lang => 'pt'}
  %head
    %meta{:charset => 'utf-8'}
    %meta{:name => "robots", :content => "index, follow"}
    %meta{:name => "author", :content => "Engage"}
    %title Multidão · Produção Cultural Colaborativa · em fase de mudanças...
    %link{ :href=>"/screen.css", :media=>"screen, projection", :rel=>"stylesheet", :type=>"text/css" }
